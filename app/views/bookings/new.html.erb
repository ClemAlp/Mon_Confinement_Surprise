  let numbers = 0

  console.log(active.length);

  card.forEach((element) => {
    element.addEventListener("click", function (e) {
    element.classList.toggle('border-zach');
    if (element.classList.contains('border-zach')){
      numbers += 1;
    }else{
      numbers -= 1;
    };
